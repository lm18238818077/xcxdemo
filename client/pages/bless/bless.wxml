<!--pages/bless/index.wxml-->
<view class="container">

  <view class="title" wx:if="{{zanLog.length > 0}}">已收到 {{zanLog.length}} 位好友的祝福</view>
  <view class="title" wx:if="{{zanLog.length == 0}}"> 点击下方按钮可送上祝福 </view>

  <view class="friends">
    <view bindtap='loadMoreFriends' class="face" wx:for="{{zanLog}}" wx:key="user">
      <image src="{{item.face}}" />
    </view>

  </view>
  <view class="btn_zone">
    <view class="zan fl">
      <button type="primary" bindtap="bless">送上祝福</button>
    </view>
    <view class="share fr">
      <button type="default" open-type="share">分享</button>
    </view>
  </view>

  <view wx:if="{{chatList.length > 0}}">
    <view class="chat_list" wx:for="{{chatList}}" wx:key="user"data-index="index">
      <view class="chat_face">
        <image src="{{item.face}}" />

      </view>
      <view class="chat_words">
        <view class="chat_meta">
          <text class="chat_user">{{item.name}}</text>
          <text class="chat_date">{{item.ctime}}</text>
        </view>
        <view class='ba'>
          <view class='chat_content'>{{item.words}}</view>
          <view wx:if="{{item.id}}" class='chat_zan' data-index="{{index}}" id="{{item.id}}" bindtap="zan" >赞({{item.zannum}})</view>
        </view>

      </view>
    </view>
  </view>
  <view wx:else>
    <view class="befirst">
      <image src="/image/lovemail.gif" />
    </view>
  </view>
  <view class="send_msg">
    <form bindreset="foo">
      <input placeholder="在这里输入您要说的话" class="send_ipt" bindinput="bindKeyInput" />
      <button type="primary" form-type="reset" class="send_btn">发布</button>
    </form>
  </view>
</view>